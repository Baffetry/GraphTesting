<Window x:Class="TeacherGraphApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeacherGraphApplication"
        mc:Ignorable="d"
        Title="Graph tester" 
        WindowState="Maximized"
        WindowStyle="ThreeDBorderWindow"
        MinWidth="1400" MinHeight="900">

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="/Fonts/#Inter"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="40"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#000000"/>
            <Setter Property="BorderThickness" Value="4"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Background" Value="#f0f0f0"/>
        </Style>

        <Style TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="40"/>
            <Setter Property="FontFamily" Value="/Fonts/#Inter"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="ContentTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" TextWrapping="Wrap"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ScrollBar">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Border CornerRadius="6" Background="#f0f0f0" BorderBrush="#000000" BorderThickness="2">
                            <Grid>
                                <Track x:Name="PART_Track" IsDirectionReversed="true">
                                    <Track.Thumb>
                                        <Thumb>
                                            <Thumb.Template>
                                                <ControlTemplate TargetType="Thumb">
                                                    <Border CornerRadius="4" Background="#4dd49e" 
                                                            Margin="1" BorderBrush="#000000" BorderThickness="1"/>
                                                </ControlTemplate>
                                            </Thumb.Template>
                                        </Thumb>
                                    </Track.Thumb>
                                </Track>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Border     x:Name="border"
                                    Width="30"
                                    Height="30"
                                    Background="Transparent"
                                    BorderBrush="#000000"
                                    BorderThickness="3"
                                    CornerRadius="7">

                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4dd49e"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter TargetName="border" Property="Background" Value="Transparent"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MessageBoxStyle" TargetType="Window">
            <Setter Property="WindowStyle" Value="None"/>
            <Setter Property="AllowsTransparency" Value="True"/>
            <Setter Property="Background" Value="Transparent"/>

        </Style>

        <ControlTemplate x:Key="NoMouseOverButtonTemplate" TargetType="Button">
            <Border Background="{TemplateBinding Background}"  
                    BorderBrush="{TemplateBinding BorderBrush}"  
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="20">
                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"  
                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
            </Border>

            <ControlTemplate.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="{x:Static SystemColors.ControlLightBrush}" />
                    <Setter Property="Foreground" Value="{x:Static SystemColors.GrayTextBrush}" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </Window.Resources>

    <Border Background="#f0f0f0">
        <!-- Основной контейнер с масштабированием -->
        <Viewbox Stretch="Uniform" StretchDirection="DownOnly" >

            <!-- Контент разработанный для 1920x1080 -->
            <Grid Width="1920" Height="1080" Background="#f0f0f0">

                <Grid.RowDefinitions>
                    <RowDefinition Height="180"/>
                    <RowDefinition Height="720"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" 
                            VerticalAlignment="Top" 
                            DockPanel.Dock="Top"
                            HorizontalAlignment="Center"
                            Grid.Row="0">

                    <Button x:Name="ButtonProperties" 
                            Width="500" Height="120" 
                            Margin="70,40,70,0" 
                            Background="#f0f0f0" 
                            Foreground="Black"                   
                            BorderBrush="Black" 
                            BorderThickness="4" 
                            Content="Характеристика" 
                            FontSize="40" 
                            FontWeight="Bold" 
                            MouseEnter="ButtonProperties_MouseEnter" 
                            MouseLeave="ButtonProperties_MouseLeave"
                            Click="ButtonProperties_Click"
                            Template="{StaticResource NoMouseOverButtonTemplate}"/>

                    <Button x:Name="ButtonResults" 
                            Width="500" Height="120" 
                            Margin="70,40,70,0" 
                            Background="#f0f0f0" 
                            Foreground="Black"
                            BorderBrush="Black" 
                            BorderThickness="4" 
                            Content="Ответы" 
                            FontSize="40" 
                            FontWeight="Bold"                    
                            MouseEnter="ButtonResults_MouseEnter" 
                            MouseLeave="ButtonResults_MouseLeave" 
                            Click="ButtonResults_Click"
                            Template="{StaticResource NoMouseOverButtonTemplate}"/>

                    <Button x:Name="ButtonExit" 
                            Width="500" Height="120" 
                            Margin="70,40,70,0" 
                            Background="#f0f0f0" 
                            Foreground="Black"                  
                            BorderBrush="Black" 
                            BorderThickness="4" 
                            Content="Выход" 
                            FontSize="40" 
                            FontWeight="Bold" 
                            MouseEnter="ButtonExit_MouseEnter"
                            MouseLeave="ButtonExit_MouseLeave" 
                            Click="ButtonExit_Click" 
                            Template="{StaticResource NoMouseOverButtonTemplate}"/>

                </StackPanel>

                <!-- Окно характеристик -->

                <DockPanel Margin="80, 50, 80, 10" Grid.Row="1">
                    
                    <Grid x:Name="PropertiesGrid" DockPanel.Dock="Top">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="600"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                    </Grid>

                </DockPanel>

                <!-- Окно результатов -->
                <DockPanel x:Name="ResultGrid" 
                           Visibility="Collapsed" 
                           Margin="80, 50, 80, 10"
                           Grid.Row="1">
                    <!-- Загаловки -->
                    <Grid x:Name="Labels" Height="60" DockPanel.Dock="Top" Margin="0,0,17,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" Content="Студент" FontWeight="Bold"/>
                        <Label Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Content="Решено" FontWeight="Bold"/>
                        <Label Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" Content="Процент" FontWeight="Bold"/>
                        <Label Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Center" Content="Оценка" FontWeight="Bold"/>
                    </Grid>

                    <!-- Данные -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto" ScrollChanged="ScrollViewer_ScrollChanged">

                        <Grid x:Name="ResultTable" Margin="0,15,0,0">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                        </Grid>
                    </ScrollViewer>

                </DockPanel>

                <StackPanel x:Name="PropButtons" 
                            Grid.Row="2"
                            Orientation="Horizontal" 
                            Visibility="Collapsed" 
                            HorizontalAlignment="Right">

                    <Button x:Name="ButtonSave" 
                            Width="500" Height="120" 
                            Margin="0, 0, 50, 60"
                            Background="#f0f0f0" 
                            Foreground="Black"
                            BorderBrush="Black" 
                            BorderThickness="4" 
                            Content="Сохранить вариант" 
                            FontSize="40" 
                            FontWeight="Bold"                    
                            MouseEnter="ButtonSaveVariant_MouseEnter" 
                            MouseLeave="ButtonSaveVariant_MouseLeave" 
                            Click="ButtonSaveVariant_Click"
                            Template="{StaticResource NoMouseOverButtonTemplate}"/>
                </StackPanel>
            </Grid>
        </Viewbox>
    </Border>
</Window>
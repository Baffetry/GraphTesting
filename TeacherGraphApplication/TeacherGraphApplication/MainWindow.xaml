<Window x:Class="TeacherGraphApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeacherGraphApplication"
        mc:Ignorable="d"
        Title="Graph tester" Height="1080" Width="1920"
        WindowState="Maximized"
        WindowStyle="ThreeDBorderWindow"
        >
    <Window.Resources>

        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="/Fonts/#Inter"/>
        </Style>

        <ControlTemplate x:Key="NoMouseOverButtonTemplate"   
                 TargetType="Button">
            <Border Background="{TemplateBinding Background}"  
          BorderBrush="{TemplateBinding BorderBrush}"  
          BorderThickness="{TemplateBinding BorderThickness}">
                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"  
                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
            </Border>

            <ControlTemplate.Triggers>
                <Trigger Property="IsEnabled"  
             Value="False">
                    <Setter Property="Background"  
              Value="{x:Static SystemColors.ControlLightBrush}" />
                    <Setter Property="Foreground"  
              Value="{x:Static SystemColors.GrayTextBrush}" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </Window.Resources>
    <DockPanel>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" DockPanel.Dock="Top" >

            <Button x:Name="ButtonProperties" Width="500" Height="120" Margin="70,40,70,0" Background="#ffffff" Foreground="Black"                   
              BorderBrush="Black" BorderThickness="4" Content="Характеристика" FontSize="40" FontWeight="Bold" 
                MouseEnter="ButtonProperties_MouseEnter" MouseLeave="ButtonProperties_MouseLeave" Template="{StaticResource NoMouseOverButtonTemplate}">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button x:Name="ButtonResults" Width="500" Height="120" Margin="70,40,70,0" Background="#ffffff" Foreground="Black"
              BorderBrush="Black" BorderThickness="4" Content="Ответы" FontSize="40" FontWeight="Bold"                    
                MouseEnter="ButtonResults_MouseEnter" MouseLeave="ButtonResults_MouseLeave" Template="{StaticResource NoMouseOverButtonTemplate}">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button x:Name="ButtonExit" Width="500" Height="120" Margin="70,40,70,0" Background="#ffffff" Foreground="Black"                  
              BorderBrush="Black" BorderThickness="4" Content="Выход" FontSize="40" FontWeight="Bold" MouseEnter="ButtonExit_MouseEnter"
                MouseLeave="ButtonExit_MouseLeave" Click="ButtonExit_Click" Template="{StaticResource NoMouseOverButtonTemplate}">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources>
            </Button>

        </StackPanel>
        <StackPanel>
            
        </StackPanel>
    </DockPanel>
</Window>

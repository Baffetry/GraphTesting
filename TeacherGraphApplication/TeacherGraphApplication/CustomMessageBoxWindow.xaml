<Window x:Class="TeacherGraphApplication.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeacherGraphApplication"
        mc:Ignorable="d"
        Title="CustomMessageBox" 
        Height="300" 
        Width="500"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None">

    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="9"/>
            <Setter Property="FontFamily" Value="/Fonts/#Inter"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="ContentTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" TextWrapping="Wrap"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <ControlTemplate x:Key="NoMouseOverButtonTemplate" TargetType="Button">
            <Border Background="{TemplateBinding Background}"  
                    BorderBrush="{TemplateBinding BorderBrush}"  
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="3">
                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"  
                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
            </Border>

            <ControlTemplate.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="{x:Static SystemColors.ControlLightBrush}" />
                    <Setter Property="Foreground" Value="{x:Static SystemColors.GrayTextBrush}" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </Window.Resources>

    <Border Background="#f0f0f0" 
            BorderBrush="#000000" 
            BorderThickness="1" 
            CornerRadius="5"
            MouseLeftButtonDown="Border_MouseLeftButtonDown">

        <StackPanel>
            <Border Background="#FFFFE0" Margin="2,2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="420"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Image x:Name="IconImage"
                       Grid.Column="0" 
                       Height="25"
                       Width="25"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

                <Label x:Name="TitleLabel" 
                       Grid.Column="1"
                       Content="text" 
                       Margin="0,8,0,7" 
                       FontSize="16" 
                       Width="390"/>

                <Button x:Name="ButtonClose" 
                        Grid.Column="2"
                        Height="30" 
                        Width="30" 
                        Content="X" 
                        FontSize="20" 
                        FontWeight="Bold" 
                        FontFamily="/Fonts/#Inter" 
                        Foreground="Black" 
                        Background="#f0f0f0"
                        BorderBrush="Black" 
                        BorderThickness="1" 
                        Template="{StaticResource NoMouseOverButtonTemplate}" 
                        MouseEnter="ButtonClose_MouseEnter" 
                        MouseLeave="ButtonClose_MouseLeave"
                        Click="ButtonClose_Click"/>
            </Grid>
            </Border>
            
            <Separator Visibility="Visible" 
                       Height="1"
                       Background="#000000"/>

            <Label x:Name="ContentLabel" 
                   Content="Some text"
                   Width="480"
                   Height="140"
                   FontSize="24"
                   Margin="10, 20, 10, 10"/>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="70"/>
                </Grid.RowDefinitions>

                <StackPanel x:Name="YesNoPanel"
                            Visibility="Collapsed"
                            Orientation="Horizontal" 
                            Grid.Row="0"
                            HorizontalAlignment="Right" 
                            Margin="15,0">

                    <Button x:Name="ButtonYes" 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Height="50"
                            Width="60"
                            Content="Yes" 
                            Margin="0,0,3,0" 
                            FontSize="18"
                            FontWeight="Bold"
                            FontFamily="/Fonts/#Inter"
                            Foreground="Black"     
                            Background="#4dd49e"
                            BorderBrush="Black" 
                            BorderThickness="1" 
                            Template="{StaticResource NoMouseOverButtonTemplate}"
                            MouseEnter="ButtonYes_MouseEnter"
                            MouseLeave="ButtonYes_MouseLeave"/>

                    <Button x:Name="ButtonNo" 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Content="No" 
                            Height="50"
                            Width="60"
                            FontSize="18"
                            FontWeight="Bold"
                            FontFamily="/Fonts/#Inter"
                            Foreground="Black"   
                            Background="#db5174"
                            BorderBrush="Black" 
                            BorderThickness="1" 
                            Template="{StaticResource NoMouseOverButtonTemplate}"
                            MouseEnter="ButtonNo_MouseEnter"
                            MouseLeave="ButtonNo_MouseLeave"/>
                    
                </StackPanel>

                <StackPanel x:Name="OkPanel"
                            Orientation="Horizontal" 
                            Grid.Row="0"
                            Visibility="Collapsed"
                            HorizontalAlignment="Right" 
                            Margin="15,0">
                    
                    <Button x:Name="ButtonOk" 
                            Content="OK" 
                            Height="50"
                            Width="60"
                            FontSize="18"
                            FontWeight="Bold"
                            FontFamily="/Fonts/#Inter"
                            Foreground="Black"   
                            Background="#4dd49e"
                            BorderBrush="Black" 
                            BorderThickness="1" 
                            Template="{StaticResource NoMouseOverButtonTemplate}"
                            MouseEnter="ButtonOk_MouseEnter"
                            MouseLeave="ButtonOk_MouseLeave"/>
                    
                </StackPanel>
                
            </Grid>
            
        </StackPanel>
    </Border>
</Window>